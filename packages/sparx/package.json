{
  "name": "@spyrothon/sparx",
  "description": "A React-based design system for Spyrothon",
  "version": "0.5.4-rc1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "public"
  ],
  "sideEffects": [
    "*.css"
  ],
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js"
      },
      "./style.css": {
        "import": "./dist/style.css",
        "require": "./dist/style.css"
      },
      "./default.css": {
        "import": "./dist/default.css",
        "require": "./dist/default.css"
      },
      "./icons/": {
        "import": "./dist/icons/"
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm gen:icons && pnpm gen:types",
    "gen:icons": "tsc --project tsconfig.icons.json",
    "gen:types": "tsc --project tsconfig.generate.json",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": ">= 18.0.0",
    "react-dom": ">= 18.0.0"
  },
  "dependencies": {
    "@iconscout/react-unicons": "^1.1.6",
    "@iconscout/react-unicons-solid": "^0.0.3",
    "@internationalized/number": "^3.2.0",
    "classnames": "^2.3.1",
    "downshift": "^6.1.7",
    "react-polymorphic-types": "github:GamesDoneQuick/react-polymorphic-types#bd1e8388c1d02d919dd038a5d5690ff7bb62da88",
    "react-remark": "^2.1.0",
    "uuid": "^8.3.2",
    "zustand": "^3.7.2"
  },
  "devDependencies": {
    "@types/node": "^18.8.5",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "typescript": "^4.6.4",
    "vite": "^4.2.1"
  }
}
