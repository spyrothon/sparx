{
  "compilerOptions": {
    // Needed for ts-node to read `.tsx` files
    "jsx": "react-jsx",
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": []
  },
  "include": ["src"],
  "ts-node": {
    "swc": true,
    "esm": true
  }
}
